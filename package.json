{
  "name": "multistart",
  "displayName": "multistart",
  "description": "Configure and start many processes in your vscode",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:multistart.run"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "multistart.run",
        "title": "Multistart"
      }
    ],
    "configuration": {
      "title": "Multistart",
      "properties": {
        "multistart.tasks": {
          "type": "array",
          "items": {
            "type": "object",
            "title": "Tasks",
            "properties": {
              "name": {
                "type": "string",
                "description": "The name of the terminal, where your commands will be executed."
              },
              "location": {
                "type": "string",
                "description": "Path to the directory, where commands have to be executed. (Optional parameter)"
              },
              "commands": {
                "type": "array",
                "description": "Array of commands that will be executed.",
                "items": {
                  "type": "array",
                  "description": "Executable command",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.73.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "^8.26.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.8.4",
    "@vscode/test-electron": "^2.2.0"
  }
}
